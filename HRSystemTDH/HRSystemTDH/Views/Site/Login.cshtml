@model HRSystemTDH.Models.Account
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login_wrapper">
    <div class="animate form login_form">
        <section class="login_content">
            <h1>HELEN</h1>
            @using (Html.BeginForm("Login", "Site", FormMethod.Post, new { @id = "frm-login", @Class = "row uk-form-body uk-form-head" }))
            {
                @Html.ValidationSummary(true);
                <div class="text-left">
                    @Html.Label("Tên đăng nhập")
                    @*@Html.TextBoxFor(m=>)*@
                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Tên đăng nhập", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)

                </div>
                <div class="text-left">
                    @Html.Label("Mật khẩu")

                    <a class="reset_pass pull-right" href="#">Quên mật khẩu</a>
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Mật khẩu", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div>
                    <button class="btn btn-success submit col-xs-12" type="submit">Đăng nhập</button>
                </div>
                <div class="clearfix"></div>
                @*<div class="separator">
                    <label class="change_link">
                        New to site?
                        <a href="#signup" class="to_register"> Create Account </a>
                    </label>

                </div>*@
            }
            <div class="clearfix"></div>
            <br /><br />
            <div>
                <p>&copy; @DateTime.Now.Year <ul class="list-unstyled list-inline"><li>Terms</li><li>Privacy</li><li>Contact</li></ul></p>
            </div>
        </section>
    </div>
 
</div>